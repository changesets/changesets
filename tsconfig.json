{
  "compilerOptions": {
    "target": "esnext",
    "module": "Node16",
    "moduleResolution": "Node16",
    "allowImportingTsExtensions": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "erasableSyntaxOnly": true,
    "libReplacement": false,
    "strict": true,
    "noEmit": true,
    "types": ["vitest/globals"]
  }
}
